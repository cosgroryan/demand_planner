# Demand Planner Configuration
# Copy this file to .env and modify as needed

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=false
API_LOG_LEVEL=info

# Database Configuration (if using database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=demand_planning
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=10

# Data Configuration
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed
DATA_SERIES_DIR=data/processed/series
DATA_FEATURES_DIR=data/processed/features
REPORTS_DIR=reports
BACKTESTS_DIR=reports/backtests
PLANNING_DIR=reports/planning
MAX_FILE_SIZE_MB=1000
COMPRESSION=snappy

# Model Configuration
DEFAULT_MODEL=auto
DEFAULT_HORIZON=13
DEFAULT_HISTORY_WINDOW=52
DEFAULT_STEP_SIZE=4
AUTO_MODEL_SELECTION=true
MODEL_CACHE_SIZE=100
PARALLEL_PROCESSING=true
MAX_WORKERS=4

# Inventory Configuration
DEFAULT_SERVICE_LEVEL=0.95
DEFAULT_LEAD_TIME_PERIODS=4
DEFAULT_SAFETY_STOCK_MULTIPLIER=1.0
DEFAULT_REVIEW_PERIOD=1
DEFAULT_MIN_ORDER_QTY=0.0
DEFAULT_ORDER_MULTIPLE=1.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/demand_planner.log
LOG_MAX_FILE_SIZE_MB=100
LOG_BACKUP_COUNT=5
LOG_CONSOLE_OUTPUT=true
LOG_RICH_LOGGING=true

# UI Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost
API_BASE_URL=http://localhost:8000
UI_THEME=light
UI_PAGE_TITLE=Demand Planner
UI_PAGE_ICON=ðŸ“Š

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080